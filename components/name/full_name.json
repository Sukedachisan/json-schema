{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://sukedachisan.github.io/json-schema/components/name/full_name.json",
    "title": "FullNameDefinitions",
    "description": "氏名定義",
    "$defs": {
        "firstName": {
            "title": "名",
            "description": "個人名（ファーストネーム）",
            "example": "太郎",
            "maxLength": 255,
            "$ref": "https://sukedachisan.github.io/json-schema/definitions/patterns.json#/$defs/nameStrict"
        },
        "lastName": {
            "title": "姓",
            "description": "氏族名（ラストネーム）",
            "example": "山田",
            "maxLength": 255,
            "$ref": "https://sukedachisan.github.io/json-schema/definitions/patterns.json#/$defs/nameStrict"
        },
        "firstNameKana": {
            "title": "メイ",
            "description": "個人名（ファーストネーム）のフリガナ",
            "example": "タロウ",
            "maxLength": 255,
            "$ref": "https://sukedachisan.github.io/json-schema/definitions/patterns.json#/$defs/kanaStrict"
        },
        "lastNameKana": {
            "title": "セイ",
            "description": "氏族名（ラストネーム）のフリガナ",
            "example": "ヤマダ",
            "maxLength": 255,
            "$ref": "https://sukedachisan.github.io/json-schema/definitions/patterns.json#/$defs/kanaStrict"
        }
    }
}
