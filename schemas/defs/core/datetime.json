{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://sukedachisan.github.io/json-schema/schemas/defs/core/datetime.json",
    "title": "CommonDateTimeDefinitions",
    "description": "システム全体で利用される共通日時定義集",
    "$comment": "$defs内の各要素を$refで参照して利用してください。",
    "$defs": {
        "dateTime": {
            "title": "日時（ISO 8601）",
            "description": "ISO 8601形式の日時文字列（例: 2023-01-01T12:00:00Z）",
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01T12:00:00Z"
        },
        "dayOfWeek": {
            "title": "曜日",
            "description": "日本語表記の曜日",
            "$ref": "https://sukedachisan.github.io/json-schema/schemas/defs/core/defs/enums.json#/$defs/dayOfWeek"
        },
        "year": {
            "title": "年",
            "description": "西暦年（4桁の数字文字列、1000年以降）",
            "type": "string",
            "pattern": "^[1-9][0-9]{3}$",
            "example": "2025"
        },
        "month": {
            "title": "月",
            "description": "01月から12月までの文字列（ゼロ埋め2桁）",
            "example": "01",
            "$ref": "https://sukedachisan.github.io/json-schema/schemas/defs/core/defs/enums.json#/$defs/month"
        },
        "day": {
            "title": "日",
            "description": "01日から31日までの文字列（ゼロ埋め2桁）",
            "example": "01",
            "$ref": "https://sukedachisan.github.io/json-schema/schemas/defs/core/defs/enums.json#/$defs/day"
        },
        "hour": {
            "title": "時",
            "description": "00時から23時までの文字列（ゼロ埋め2桁）",
            "example": "09",
            "$ref": "https://sukedachisan.github.io/json-schema/schemas/defs/core/defs/enums.json#/$defs/hour"
        },
        "minute": {
            "title": "分",
            "description": "00分から59分までの文字列（ゼロ埋め2桁）",
            "example": "05",
            "$ref": "https://sukedachisan.github.io/json-schema/schemas/defs/core/defs/enums.json#/$defs/minute"
        }
    }
}
